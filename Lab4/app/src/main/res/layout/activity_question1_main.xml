<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1MainActivity">
    <TextView
        android:textSize="25sp"
        android:textColor="#3A3A3A"
        android:text="Đặt thức ăn và đồ uống"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"/>

    <Button
        android:text="Chọn thức ăn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btnOrderFood"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"/>

    <Button
        android:text="Chọn đồ uống"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btnOrderDrink"
        app:layout_constraintEnd_toEndOf="@+id/btnOrderFood"
        app:layout_constraintStart_toStartOf="@+id/btnOrderFood"
        app:layout_constraintTop_toBottomOf="@+id/btnOrderFood" android:layout_marginTop="45dp"
        />
    <Button
        android:text="Thoát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btnQuit"
        app:layout_constraintEnd_toEndOf="@+id/btnOrderDrink"
        app:layout_constraintTop_toBottomOf="@+id/btnOrderDrink"
        app:layout_constraintStart_toStartOf="@+id/btnOrderDrink" android:layout_marginTop="30dp"
        />
    <TextView
        android:textSize="20sp"
        android:textColor="#3A3A3A"
        android:text="$Ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tvOrderedFood"
        app:layout_constraintTop_toBottomOf="@+id/btnQuit" app:layout_constraintStart_toStartOf="@+id/btnQuit"
        app:layout_constraintEnd_toEndOf="@+id/btnQuit" android:layout_marginTop="80dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>